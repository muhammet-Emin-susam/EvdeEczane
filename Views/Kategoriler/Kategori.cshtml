@model EvdeEczane.Models.Menuler
@{
    ViewBag.Title = "Kategori";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header text-center" style="background-image: url('~/Content/assets/images/page-header-bg.jpg')">
    <div class="container electronics">
        <div class="heading  heading-border mb-3">
            <div class="heading-left">
                <h2 class="title text-center mb-2">KATEGORİNİN EN ÇOK SATANLARI</h2><!-- End .title -->
            </div><!-- End .heading-left -->


        </div><!-- End .heading -->

        <div class="tab-content tab-content-carousel">
            <div class="tab-pane p-0 fade show active" id="elec-new-tab" role="tabpanel" aria-labelledby="elec-new-link">
                <div class="owl-carousel owl-simple carousel-equal-height carousel-with-shadow" data-toggle="owl"
                     data-owl-options='{
                                "nav": false,
                                "dots": true,
                                "margin": 20,
                                "loop": false,
                                "responsive": {
                                    "0": {
                                        "items":2
                                    },
                                    "480": {
                                        "items":2
                                    },
                                    "768": {
                                        "items":3
                                    },
                                    "992": {
                                        "items":4
                                    },
                                    "1280": {
                                        "items":5,
                                        "nav": true
                                    }
                                }
                            }'>
                    @foreach (var item in ViewBag.encok)
                    {


                        <div class="product">
                            <figure class="product-media">
                                <span class="product-label label-new">ÇOK SATANLAR</span>
                                @if (item.isYeni == true)
                                {
                                    <span class="product-label label-new">YENİ</span>
                                }
                                @if (item.isTrend == true)
                                {
                                    <span class="product-label label-new">TREND</span>
                                }
                                <a href="/StokDetay/StokDetay/@item.ID">
                                    <img src="@item.StokResim" alt="Product image" class="product-image">
                                </a>

                                <!--<div class="product-action-vertical">
                                    <a href="#" class="btn-product-icon btn-wishlist btn-expandable"><span>add to wishlist</span></a>
                                    <a href="#" class="btn-product-icon btn-compare" title="Compare"><span>Compare</span></a>
                                    <a href="popup/quickView.html" class="btn-product-icon btn-quickview" title="Quick view"><span>Quick view</span></a>
                                </div>-->
                                <!-- End .product-action-vertical -->

                                <div class="product-action">
                                    @if (item.StokBakiye != 0)
                                    {
                                        <a href="" class="btn-product" onclick="AddCart(@item.ID)"><span>SEPETE EKLE</span></a>
                                    }
                                    else
                                    {
                                        <a href="javascript:void" class="btn-product"><span>STOKTA YOK</span></a>
                                    }
                                </div><!-- End .product-action -->
                            </figure><!-- End .product-media -->

                            <div class="product-body">

                                <h3 class="product-title"><a href="/StokDetay/StokDetay/@item.ID">@item.StokAdi</a></h3><!-- End .product-title -->
                                <div class="product-price text-center" style="margin-top:10px;margin-left:52px">
                                    @item.StokFiyat TL
                                </div><!-- End .product-price -->

                            </div><!-- End .product-body -->
                        </div><!-- End .product -->

                    }
                </div><!-- End .owl-carousel -->
            </div><!-- .End .tab-pane -->

        </div><!-- End .tab-content -->
    </div>
</div><!-- End .page-header -->
<nav aria-label="breadcrumb" class="breadcrumb-nav mb-2">
    <div class="container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Home/Index">Anasayfa</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.MenuAdi</li>
        </ol>
    </div><!-- End .container -->
</nav><!-- End .breadcrumb-nav -->
<input type="text" name="name" value="@Model.ID" hidden id="IDD" />
<div class="page-content">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="toolbox">
