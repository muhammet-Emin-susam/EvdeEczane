@model EvdeEczane.Models.Bloglar
@{
    ViewBag.Title = "BlogDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb" class="breadcrumb-nav mb-3" style="background-color:#fbfbfb">
    <div class="container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Anasayfa</a></li>
            <li class="breadcrumb-item"><a href="#">Bloglar</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.BlogAdi</li>
        </ol>
    </div><!-- End .container -->
</nav><!-- End .breadcrumb-nav -->
<div class="page-content">
    <div class="container">
        <div class="row">
            <span style="float:right">@Model.BlogTarih</span>
            <div class="col-lg-12">

                <article class="entry single-entry">

                    <figure class="entry-media">
                        <img src="@Model.BlogResim" alt="image desc">
                    </figure><!-- End .entry-media -->

                    <div class="entry-body">
                        <div class="entry-content editor-content">
                            @Html.Raw(Model.BlogAciklama)
                        </div><!-- End .entry-content -->
                    </div><!-- End .entry-body -->
                    <a href="/Home/Bloglar" class="btn btn-danger">Tüm Bloglar</a>
                </article><!-- End .entry -->
            </div>
        </div><!-- End .row -->
    </div><!-- End .container -->
</div><!-- End .page-content -->
