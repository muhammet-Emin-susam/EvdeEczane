@using EvdeEczane.Models
@model IEnumerable<EvdeEczane.Models.Marka>
<div class="container">

    <div class="owl-carousel mb-5 owl-simple" data-toggle="owl"
         data-owl-options='{
                        "nav": false,
                        "dots": true,
                        "margin": 30,
                        "loop": false,
                        "responsive": {
                            "0": {
                                "items":2
                            },
                            "420": {
                                "items":3
                            },
                            "600": {
                                "items":4
                            },
                            "900": {
                                "items":5
                            },
                            "1024": {
                                "items":6
                            },
                            "1280": {
                                "items":6,
                                "nav": true,
                                "dots": false
                            }
                        }
                    }'>

        @foreach (var item in Model)
        {
            <a href="/Home/MarkaDetay/@item.ID" class="brand">
                <img src="@item.MarkaResim" alt="Brand Name">
            </a>
        }



    </div><!-- End .owl-carousel -->
</div><!-- End .container -->
