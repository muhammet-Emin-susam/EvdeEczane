@model EvdeEczane.Models.Admin
@{
    ViewBag.Title = "AdminAyarlari";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="input-group-basic">
    <div class="row">
        <!-- Basic -->
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Admin Ayarları</h4>
                </div>
                <div class="card-body">

                        <label class="form-label">Kullanıcı Adı</label>
                        <div class="input-group mb-2">
                            <input type="text" class="form-control" placeholder="Kullanıcı Adı" value="@Model.AdminKullaniciAdi" id="KullaniciAdi"/>
                        </div>
                        <label class="form-label">Kullanıcı Şifre</label>
                        <div class="input-group mb-2">
                            <input type="text" class="form-control" placeholder="Kullanıcı Şifre"  value="@Model.AdminSifre" id="KullaniciSifre" />
                        </div>
                        <div class="input-group">
                            <button class="btn btn-primary" type="button" onclick="AdminGuncelle(@Model.ID)">Kaydet</button>
                        </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Adjs{
    <script>
         function AdminGuncelle(ID) {
             getValue("KullaniciAyarlari/AdminGuncelle",
                { ID: ID, KullaniciAdi: $("#KullaniciAdi").val(), KullaniciSifre: $("#KullaniciSifre").val() },
                function (data, err) {
                    if (!data) {
                        return;
                    } else if (data == 'Başarılı') {
                        location.href = '@Url.Action("AdminAyarlari", "KullaniciAyarlari")';
                    }
                    else if (data.indexOf('Hata') > -1) {
                        alert(data)
                    }
                });
        };

    </script>
    }